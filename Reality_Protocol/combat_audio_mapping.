// Different market events = Different audio signatures
const audioMappings = {
    // BTC Price Movements
    'btc_surge': {
        baseFreq: 432,
        harmonics: [432, 864, 1296], // 1st, 2nd, 3rd harmonics
        envelope: 'attack',          // Sharp rise
        duration: 0.5
    },
    
    // Ethereum Movements  
    'eth_pump': {
        baseFreq: 432,
        harmonics: [432, 648, 972],  // Different harmonic series
        envelope: 'sustain',         // Longer hold
        duration: 1.0
    },
    
    // Market Crash
    'market_crash': {
        baseFreq: 432,
        harmonics: [432, 216, 108],  // Descending harmonics
        envelope: 'decay',           // Falling tone
        duration: 2.0
    },
    
    // Whale Activity
    'whale_buy': {
        baseFreq: 432,
        harmonics: [432, 864, 1728, 3456], // Rich harmonic content
        envelope: 'crescendo',       // Building intensity
        duration: 3.0
    }
};
